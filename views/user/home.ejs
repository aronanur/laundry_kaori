
<%- include('layouts/header') %>
<%- include('layouts/navbar', { islogin : isLogin }) %>
<%- include('layouts/jumbotron') %>

<h2 class="text-center">Pilih paket laundry yang kamu mau</h2>
<br>
<div class="col-md-8 mx-auto">
    <% if(messages.error) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <br>
    <% } %>
    <% if(status) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= status %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <br>
    <% } %>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Cari berdasarkan nama paket" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
          <button type="submit" class="btn main-bg-color text-light">Cari Paket</button>
        </div>
      </div>
      <br>

      <div class="col-md-12">
          <p>Paket Terbaik Kami : </p>
          <div class="row">
              <% pakets.map(paket => { %>
              <div class="col-md-3">
                <div class="card">
                    <img src="<%= paket.picture %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <small class="card-text text-info" style="font-weight: bold;"><i class="fa fa-tags" aria-hidden="true"></i> <%= paket.name %></small>
                      <small class="card-text"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= paket.duration %> Hari</small>
                      <small class="card-text text-info pb-2"><i class="fa fa-usd" aria-hidden="true"></i> <%= formatRupiah(paket.price) %>/pcs</small>
                      <a href="/login" class="btn btn-warning btn-sm text-light card-btn" type="button"><i class="fa fa-plus" aria-hidden="true"></i> Cart</a> &nbsp;
                      <a href="/laundry/<%= paket.id %>" class="btn main-bg-color text-light btn-sm card-btn" type="button"> Wash</a> &nbsp;
                    </div>
                  </div>
              </div>
              <% }) %>
          </div>
      </div>

</div>
<br>

<%- include('layouts/footer') %>
