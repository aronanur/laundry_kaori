<%- include('layouts/header') %>

<div class="container" style="margin-top: 100px;">
    <div class="col-md-8 mx-auto">
        <h1 class="text-center main-color"><b>Kaori</b> Laundry | Register</h1>
        <br>
        <form action="/login" method="POST">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nama</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Masukan nama lengkap" name="name" aria-describedby="emailHelp">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Masukan email" name="email" aria-describedby="emailHelp">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Masukan password" id="exampleInputPassword1">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Konfirmasi Password</label>
                        <input type="password" class="form-control" name="konfirmasi_password" placeholder="Masukan password" id="exampleInputPassword1">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nomor Telfon</label>
                        <input type="number" class="form-control" name="phone" placeholder="Masukan phone number" id="exampleInputPassword1">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Jenis Kelamin</label>
                        <select class="form-control">
                            <option value="">--- Pilih Jenis Kelamin ---</option>
                            <option value="Pria">Pria</option>
                            <option value="Wanita">Wanita</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
            <label for="exampleInputPassword1">Alamat</label>
            <textarea class="form-control" name="address" placeholder="Masukan alamat lengkap"></textarea>
            </div>
            <p style="text-indent: 2px;" class="basic-color"><%= messages.error %></p>
            <button type="submit" style="width: 49%;" class="btn text-light main-bg-color mt-2"><i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp;Register</button>
            <button type="reset" style="width: 49%;" class="btn text-light second-bg-color mt-2"><i class="fa fa-repeat" aria-hidden="true"></i> &nbsp;Reset</button>
            <p class="text-center pt-3"><a style="text-decoration: none; font-size: 13px;" href="/login">Sudah Punya Akun ? Silahkan Login</a></p>
        </form>
    </div>
</div>