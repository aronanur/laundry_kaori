
<%- include('layouts/header') %>

<div class="container" style="margin-top: 100px;">
    <div class="col-md-5 mx-auto">
        <h1 class="text-center main-color"><b>Kaori</b> Laundry | Login</h1>
        <br>
        <% if(messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
        <% } %>
        <form action="/login" method="POST">
            <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Put your email" name="email" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Put your password" id="exampleInputPassword1">
            <small id="emailHelp" class="form-text text-muted">We'll never share your password with anyone else.</small>
            </div>
            <p style="text-indent: 2px;" class="second-color"><%= messages.error %></p>
            <button type="submit" style="width: 49%;" class="btn text-light main-bg-color mt-2"><i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp;Login</button>
            <button type="reset" style="width: 49%;" class="btn text-light second-bg-color mt-2"><i class="fa fa-repeat" aria-hidden="true"></i> &nbsp;Reset</button>
            <p class="text-center pt-3"><a style="text-decoration: none; font-size: 13px;" href="/register">Belum Punya Akun ? Silahkan Daftar</a></p>
        </form>
    </div>
</div>

