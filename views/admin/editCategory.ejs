<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

    <div class="container" style="margin-top: 100px;">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center main-color"><b>Kaori</b> Laundry | Add Category</h1>
            <br>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input value="<%=category.name?category.name:''%>" type="text" class="form-control"
                        id="exampleInputEmail1" name="name" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Price</label>
                    <input value="<%=category.price?category.price:''%>" type="number" class="form-control" name="price"
                        id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Duration</label>
                    <input value="<%=category.duration?category.duration:''%>" type="number" class="form-control"
                        name="duration" placeholder="Change total price" id="exampleInputEmail1">
                </div>
                <select class="custom-select" name="ParfumeId">
                    <%parfumes.forEach(parfume=>{%>
                    <option value="<%=parfume.id%>" <%=parfume.id==category.ParfumeId?"selected":""%>><%=parfume.name%>
                    </option>
                    <%})%>
                </select>
                <%if(messages.error){messages.error.forEach(message=>{%>
                    <p style="text-indent: 2px; color: red;" class="basic-color"><%= message %></p>
                <%})}%>
                <br>
                <button type="submit" style="width: 49%;" class="btn text-light main-bg-color mt-2"><i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp;Submit</button>
            </form>
        </div>
    </div>
    <%- include('../user/layouts/footer') %>
