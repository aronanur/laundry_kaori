    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Fragrance</th>
            <th>Rating</th>
            <th>Action</th>
        </tr>
        <% categories.forEach(category=>{ %>
        <tr>
            <td><%= category.id%></td>
            <td><%= category.name%></td>
            <td><%= formatRupiah(category.price)%></td>
            <td><%= category.duration%></td>
            <td><%= category.Parfume.name%></td>
            <td><%= category.rating%></td>
            <td> <a href="/admins/deleteCategory/<%=category.id%>">Delete</a> |
                <a href="/admins/editCategory/<%=category.id%>">Update</a> </td>
        </tr>
    </table>


    <div class="container" style="margin-top: 100px;">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center main-color"><b>Kaori</b> Laundry | Add Category</h1>
            <br>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input value="<%=category.name?category.name:''%>" type="text" class="form-control"
                        id="exampleInputEmail1" name="name" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Price</label>
                    <input value="<%=category.price?category.price:''%>" type="number" class="form-control" name="price"
                        id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Duration</label>
                    <input value="<%=category.duration?category.duration:''%>" type="number" class="form-control"
                        name="duration" placeholder="Change total price" id="exampleInputEmail1">
                </div>
                
                <p style="text-indent: 2px;" class="basic-color"><%= messages.error %></p>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</body>

